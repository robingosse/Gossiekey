#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,physical-layout = &physical_layout0;
    };
    
    physical_layout0: physical_layout_0 { // First physical layout, use different naming for other layouts
        compatible = "zmk,physical-layout";
        display-name = "Default Layout";
        kscan = <&kscan0>; // Label of the kscan node, optional if all layouts use the same
        transform = <&default_transform>; // Label of the matrix transform for this layout
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "row2col";
    };

    default_transform: keymap_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <10>; /* 5 left + 5 right */
        rows = <7>;     /* 7 rows total (as you originally described) */
        map = <
        //  Lkey1   Lkey2   Lkey3   Lkey4   Lkey5       RKey1   RKey2   RKey3   RKey4   RKey5
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)     RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9) // Switch 1
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)     RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9) // Switch 2
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)     RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9) // Switch 3
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)     RC(3,5) RC(3,6) RC(3,7) RC(3,8) RC(3,9) // Switch 4
            RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4)     RC(4,5) RC(4,6) RC(4,7) RC(4,8) RC(4,9) // Switch 5
            RC(5,0) RC(5,1) RC(5,2) RC(5,3) RC(5,4)     RC(5,5) RC(5,6) RC(5,7) RC(5,8) RC(5,9) // Switch 6
            RC(6,0) RC(6,1) RC(6,2) RC(6,3) RC(6,4)     RC(6,5) RC(6,6) RC(6,7) RC(6,8) RC(6,9) // Switch 7
        >;
    };
};
